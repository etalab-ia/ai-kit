{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "lint": {
      "cache": true,
      "inputs": ["**/*.py", "pyproject.toml", ".ruff.toml"]
    },
    "format": {
      "cache": true,
      "inputs": ["**/*.py", "pyproject.toml", ".ruff.toml"],
      "outputs": ["**/*.py"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["**/*.py", "tests/**", "pyproject.toml"],
      "outputs": [".coverage", "htmlcov/**"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["src/**", "pyproject.toml"],
      "outputs": ["dist/**", "build/**", "*.egg-info/**"]
    }
  }
}
